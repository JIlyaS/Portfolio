{
  "overrides": [
    {
      "files": [ "src/**/*.js", "./gulp/**/*.js", "./gulpfile.js" ],

      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "indent": [
          "error",
          2
        ],
        "semi": [
          "error",
          "always"
        ],
        "quotes": [
          "error",
          "backtick"
        ]
      }
    }
  ]
}